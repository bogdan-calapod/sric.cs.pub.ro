mixin courses(courses)
  section.courses
    h1.right Courses

    .selector
      .row
        .title
          p First semester
        - for (let i = 0; i < courses.sem1.length; i++)
          - let current = courses.sem1[i];
          .entry(data-name=current.name data-desc=current.desc data-optional=current.optional)
            p #{courses.sem1[i].name}
      .row
        .title
          p Second semester
        - for (let i = 0; i < courses.sem2.length; i++)
          - let current = courses.sem1[i];
          .entry(data-name=current.name data-desc=current.desc data-optional=current.optional)
            p #{courses.sem2[i].name}
      .row
        .title
          p Third semester
        - for (let i = 0; i < courses.sem3.length; i++)
          - let current = courses.sem1[i];
          .entry(data-name=current.name data-desc=current.desc data-optional=current.optional)
            p #{courses.sem3[i].name}

